<!-- Special Offer -->
<div class="col-lg-3 col-md-4">
	<div class="info-box text-center">
		<h2>Специальное предложение<br><span class="text-danger">[xfvalue_sale]</span></h2>
		<a href="#" class="inline">
			<img src="[xfvalue_image_url_photo-sale]">
		</a>
		<h3 class="lead text-normal space-bottom-half"><a href="#" class="link-title">{title}</a></h3>
		[xfgiven_price-new]<span class="lead text-normal text-gray text-crossed">[xfvalue_price-new]</span>[/xfgiven_price-new]
		<span class="h4 text-normal text-danger">[xfvalue_price]</span>
		[xfgiven_sale-end]
		<br>
		<!-- Countdown -->
		<!-- Date Format: month/day/year. "date-time" data attribute is required. -->

		<div class="countdown space-top-half padding-top" data-date-time="[xfvalue_sale-end]">
			<div class="item">
				<div class="days">00</div>
				<span class="days_ref">Дней</span>
			</div>
			<div class="item">
				<div class="hours">00</div>
				<span class="hours_ref">Часов</span>
			</div>
			<div class="item">
				<div class="minutes">00</div>
				<span class="minutes_ref">Минут</span>
			</div>
			<div class="item">
				<div class="seconds">00</div>
				<span class="seconds_ref">Секунд</span>
			</div>
		</div><!-- .counter -->
		[/xfgiven_sale-end]
	</div><!-- .info-box -->
	<div class="padding-bottom-2x visible-xs"></div>
</div><!-- .col-lg-3.col-md-4 -->
<div class="col-lg-9 col-md-8">